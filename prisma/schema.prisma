generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  address       String
  whatsapp      String
  created_at    DateTime @default(now())
  pets          Pet[]

  @@map("organizations")
}

enum Age {
  FILHOTE
  ADULTO
  IDOSO
}

enum EnergyLevel {
  BAIXA
  MEDIA
  ALTA
}

enum Size {
  PEQUENO
  MEDIO
  GRANDE
}

enum Independence {
  BAIXA
  MEDIA
  ALTA
}

model Pet {
  id              String        @id @default(uuid())
  name            String
  details         String
  city            String
  age             Age?
  energy_level    EnergyLevel?
  size            Size?
  independence    Independence?
  organization_id String
  organization    Organization  @relation(fields: [organization_id], references: [id])
  created_at      DateTime      @default(now())

  @@map("pets")
}
